<%- include('legoHeader'); %>
        
        <!--========== HOME ==========-->
        <section class="home" id="home">
            <div class="home__container bd-container bd-grid">
                <div class="home__data">
                    <h1 class="home__title">Lego Sets</h1>
                    <h2 class="home__subtitle">Kies je favoriet eruit om de sets te raadplegen!</h2>
                 </div>
    
                <img src="img/lego-2.svg" alt="" class="home__img">
            </div>
        </section>


        <!--========== FIGS ==========-->
        <div class="select">
            <a class="buy-2">Ordenen</a>
        </div>
        <section class="menu section bd-container" id="menu">
            <span class="section-subtitle">Collectie</span>
            <h2 class="section-title">Je kan kiezen uit de volgende figuren</h2>
            <!--========== Familiehouse ==========-->
            <div class="menu__container bd-grid">
               
                    <% for (let index = 0; index < aantal; index++) {
                        %>
                        <div class="menu__content">
                            <img src= "<%= resultaten[index].set_img_url %>" alt="<%= resultaten[index].name %>" class="menu__img">
                            <h3 class="menu__name">
                                <%- '<strong>' + resultaten[index].name + '</strong><br/>' %>
                            </h3>
                            <span class="menu__detail">Dit minifiguur behoort tot de volgende sets:
                                <ul>
                                    <li class="setFoto">
                                    <%- '<strong>' + sets[index].name + '</strong>' %>
<!--                                     <img src= "<%= sets[index].set_img_url %>" alt="<%= sets[index].name %>" class=" set_img">
 -->                                    <i class="setIcon"> &#x1F6C8</i>
                                </li>
                                   
                                </ul>
                            </span>
                            <p>
                              
                            </p>
                            <span class="menu__preci">$50</span>
                            <button  id="set_button"class="set_button button2">
                                <a href="/minifiguren/<%= index %>" class="button">Set Kiezen</a></button>
                        </div>
                        <% } %>
            </div>  
        </section>
        <script src="js/setsPopup.js"></script>
        
<%- include('legoFooter'); %>